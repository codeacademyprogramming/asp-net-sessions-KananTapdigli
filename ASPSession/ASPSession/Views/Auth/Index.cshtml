
@{
    Layout = null;
}

@using ASPSession.Models
@model User


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/assets/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/assets/css/sign.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form action="~/Auth/Index" method="post" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(u => u.Username, new { @id = "name", @name = "Name", @placeholder = "Your Name" })
                            </div>
                            @{
                                bool hasNameError = ViewData.ModelState.ContainsKey("Username");

                                if (hasNameError)
                                {
                                    @Html.ValidationMessageFor(u => u.Username, null, new { @class = "alert alert-danger" }, "div")
                                }
                                else
                                {
                                    @Html.ValidationMessageFor(u => u.Username, null, new { @class = "alert alert-danger d-none" }, "div")
                                }
                            }

                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                @Html.TextBoxFor(x => x.Email, new { @id = "email", @name = "Email", @placeholder = "Your Email" })
                            </div>
                            @{
                                bool hasEmailError = ViewData.ModelState.ContainsKey("Email");

                                if (hasEmailError)
                                {
                                    @Html.ValidationMessageFor(u => u.Email, null, new { @class = "alert alert-danger" }, "div")
                                }
                                else
                                {
                                    @Html.ValidationMessageFor(u => u.Email, null, new { @class = "alert alert-danger d-none" }, "div")
                                }
                            }


                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                @Html.TextBoxFor(x => x.Password, new { @id = "pass", @name = "Password", @placeholder = "Your Password", @type = "password" })
                            </div>

                            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "alert alert-danger d-none" }, "div")

                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                @Html.TextBoxFor(x => x.confirmPassword, new { @id = "re_pass", @name = "confirmPassword", @placeholder = "Confirm Password", @type = "password" })
                            </div>
                            @Html.ValidationMessageFor(x => x.confirmPassword, null, new { @class = "alert alert-danger d-none" }, "div")

                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/assets/img/signup-image.jpg" alt="sing up image"></figure>
                        @Html.ActionLink("I am already member", "SignIn", "Auth", null, new { @class = "signup-image-link" })
                    </div>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
